    "version": "0.2.0",
    "configurations": [
        {
            "name": "Run server",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "${workspaceFolder}/main.go",
            "args": [
                "runserver"
            ],
            "env": {
                "DOCKER_API_VERSION": "1.45",
            },
        },
        {
            "name": "Create superuser",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "${workspaceFolder}/main.go",
            "args": [
                "create-superuser"
            ],
            "console": "integratedTerminal"
        }
    ]
}